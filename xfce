sudo pacman -S linux-zen linux-zen-headers nvidia-dkms nano
sudo nano /etc/default/grub
sudo grub-mkconfig -o /boot/grub/grub.cfg

sudo pacman -S lightdm-gtk-greeter xfce4
sudo systemctl enable lightdm

sudo pacman -S xfce4-pulseaudio-plugin pavucontrol xfce4-screenshooter
sudo pacman -S arc-solid-gtk-theme papirus-icon-theme phinger-cursors

sudo pacman -S firefox geany

sudo pacman -S git nvidia-settings neofetch fish gvfs reflector

git clone https://github.com/realname69/arch.git

sudo nvidia-xconfig
sudo nano /etc/X11/xorg.conf
    Option         "CustomEDID" "DVI-D-0:/home/asd/box/edid75.bin"

sudo nano /etc/X11/xorg.conf.d/50-mouse-acceleration.conf
Section "InputClass"
	Identifier "My Mouse"
	Driver "libinput"
	MatchIsPointer "yes"
	Option "AccelProfile" "flat"
	Option "AccelSpeed" "0"
EndSection

chsh -s /usr/bin/fish

sudo nano /etc/xdg/reflector/reflector.conf

sudo nano /etc/lightdm/lightdm-gtk-greeter.conf
theme-name=Arc-Dark-solid
hide-user-image=true

git clone https://aur.archlinux.org/paru.git

paru -S viewnior vlc qbittorrent xarchiver unrar unzip zip thunar-archive-plugin

paru -S ananicy auto-cpufreq stacer
sudo systemctl enable ananicy
sudo systemctl enable auto-cpufreq

paru -S steam gamemode lib32-gamemode vibrantlinux
